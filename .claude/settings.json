{
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR/.pluto/hooks/on-stop.sh\""
          }
        ]
      }
    ]
  },
  "allowedCommands": [
    "git status",
    "git diff",
    "git add",
    "git commit",
    "git log",
    "git rev-parse",
    "git stash",
    "git checkout",
    "git rebase",
    "git reset"
  ]
}